@model IEnumerable<Expense_Tracker.Models.ExpenseLimit>

@{
    ViewData["PageTitle"] = "Expense_Limits";
    ViewData["PageActionText"] = "+ Set ExpenseLimit";
    ViewData["PageActionUrl"] = "/ExpenseLimit/AddOrEdit";
}



 <div class="row">
     <div class="col-md-7">
         <ejs-grid id="ExpenseLimits" dataSource="@Model" gridLines="None"
                allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Expense_Limit" field="Expense_Limit"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-felx justify-content-center align-baselinealign-items-center" style="color: #ff2424;">
            <i class="fa-solid fa-shapes fa-2xl" style="margin-left: 11rem;margin-top: 5rem;"></i>
        </div>
    </div>
</div>


<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/ExpenseLimit/AddOrEdit/${ExpenseLimitId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/ExpenseLimit/Delete/${ExpenseLimitId}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>
